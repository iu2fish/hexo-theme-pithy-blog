<div class="post-preview">
    <a href="<%- config.root %><%- item.path %>">
        <h2 class="post-title">
            <%- item.title || theme.default_post_title || "Untitled" %>
        </h2>
        <% if (item.subtitle && item.subtitle.length) { %>
            <h3 class="post-subtitle">
                <%- item.subtitle %>
            </h3>
        <% } %>
        <% if (item.preview && item.preview.length) {%>
            <div class="post-content-preview">
                <%- item.preview%>
            </div>
        <%}%>
        <% if (item.headerimg && item.headerimg.length) {%>
            <img src = "<%- item.headerimg%>" style="width:100%"/>
        <%}else{%>
            
        <%}%>

    </a>
    <p class="post-meta">
        <!-- Date and Author -->
        <% if(item.author) { %>
            Posted by <%- item.author %> on
        <% } %>
        <%= item.date.format(config.date_format) %>
    </p>
</div>
<hr>
